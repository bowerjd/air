<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <servers>
        <server>
            <id>ossrh</id>
            <username>${env.OSSRH_USER}</username>
            <password>${env.OSSRH_PASSWORD}</password>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>gpg</id>
            <properties>
                <gpg.passphrase>${env.OSSRH_PASSWORD}</gpg.passphrase>
                <gpg.publicKeyring>${env.TRAVIS_BUILD_DIR}/public.gpg</gpg.publicKeyring>
                <gpg.secretKeyring>${env.TRAVIS_BUILD_DIR}/private.gpg</gpg.secretKeyring>
            </properties>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>gpg</activeProfile>
    </activeProfiles>

</settings>
